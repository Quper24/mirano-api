{
  "openapi": "3.0.0",
  "info": {
    "title": "Mirano API",
    "version": "1.0.0",
    "description": "API documentation for Mirano project"
  },
  "servers": [
    {
      "url": "https://mirano-api-35ag.onrender.com",
      "description": "Test server"
    }
  ],
  "paths": {
    "/api/products": {
      "get": {
        "summary": "Get all products",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "description": "Type of product",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "minPrice",
            "in": "query",
            "description": "Minimum price of products",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "maxPrice",
            "in": "query",
            "description": "Maximum price of products",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Search term",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "list",
            "in": "query",
            "description": "Comma-separated list of product IDs",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "category",
            "in": "query",
            "description": "Category of product",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "name": { "type": "string" },
                      "price": { "type": "number" },
                      "description": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/orders": {
      "post": {
        "summary": "Create a new order",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "buyer": { "type": "string" },
                  "recipient": { "type": "string" },
                  "address": { "type": "string" },
                  "paymentOnline": { "type": "boolean" },
                  "deliveryDate": { "type": "string", "format": "date" },
                  "deliveryTime": { "type": "string" }
                },
                "required": ["buyer", "recipient"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "orderId": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing required information"
          },
          "401": {
            "description": "Access denied"
          },
          "404": {
            "description": "Cart not found or empty cart"
          },
          "500": {
            "description": "Failed to save the order"
          }
        }
      }
    },
    "/api/cart/register": {
      "post": {
        "summary": "Register a new cart",
        "responses": {
          "200": {
            "description": "Existing cart key reused",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessKey": { "type": "string" },
                    "message": { "type": "string" }
                  }
                }
              }
            }
          },
          "201": {
            "description": "New cart registered",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessKey": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/cart": {
      "get": {
        "summary": "Get cart details",
        "responses": {
          "200": {
            "description": "Cart details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "productId": { "type": "string" },
                          "quantity": { "type": "integer" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Access denied"
          },
          "404": {
            "description": "Cart not found"
          }
        }
      }
    },
    "/api/cart/items": {
      "post": {
        "summary": "Add or update cart items",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "productId": { "type": "string" },
                  "quantity": { "type": "integer" }
                },
                "required": ["productId", "quantity"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cart updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "productId": { "type": "string" },
                          "quantity": { "type": "integer" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Access denied"
          },
          "404": {
            "description": "Cart not found"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}
